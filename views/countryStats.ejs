<!doctype html>
<html>

<head>
    <title>Stats</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Stats</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/home.css" type="text/css">
</head>


<body>
    <%- include ('partials/nav') %>

        <div class="img">
            <h4 style="text-align: center; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
                Covid-19 Cases Around the World
            </h4>
        </div>
        </br>


      <div class="row" style="padding-left:50px ;">
        <% info.forEach(function(i){ %>

        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card mt-4" style="width: 20rem; border-radius: 20px; box-shadow: 0 2px 2px rgb(129, 129, 129);">
            <img
                src="<%= i.countryInfo.flag %>"
                alt="could not load"
                width="100px"
                height="100px"
                
            />
            <div class="card-body">
                
                
                <p class="card-text">
                    <p> Total Cases : <%= i.cases %>
                    </p>
                    <p> Total Recovered : <%= i.recovered %>
                    </p>
                    <p> Total Death : <%= i.deaths %>
                    </p>
                    <p> Today Cases: <%= i.todayCases %>
                    </p>
                    <p> Total Recovered : <%= i.todayRecovered %>
                    </p>
                    <p> Active Cases : <%= i.active %>
                    </p>
                </p>
               
            </div>
            </div>
        </div>
        
        <% } )%>



    </div>
      
        
    </br>
    <br>
    
</body>

</html>